             xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"  
             Height="695" Width="900" WindowStyle="None" Style="{StaticResource windowStyle}" ResizeMode="CanResizeWithGrip" KeyDown="Window_KeyDown" WindowState="Maximized" HorizontalAlignment="Center" VerticalAlignment="Center">
